{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "../../../node_modules/vitest/globals.d.ts"
  ],
  "exclude": [
    "prettier.config.ts",
    "eslint.config.mjs",
    "vitest.config.ts",
    "node_modules",
    "dist",
    "test-dist",
  ]
}
